
@{
    ViewData["Title"] = "Add Movie Form";
}

@model Mission4JacobDonaldson.Models.FormResponse;

<div>
    <form method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <br />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br />
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <br />
        <label asp-for="DirectorFirstName">Director First Name:</label>
        <input asp-for="DirectorFirstName" />
        <br />
        <label asp-for="DirectorLastName">Director Last Name:</label>
        <input asp-for="DirectorLastName" />
        <br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes"></textarea>
        <br />
        <button type="submit">Submit Movie</button>
    </form>
    <!--Add in error response if required field is not intered-->
</div>